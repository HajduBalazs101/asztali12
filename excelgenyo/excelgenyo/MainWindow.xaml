<Window x:Class="excelgenyo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Excel Adatkezelő – ClosedXML" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="FilePathLabel" Text="Betöltött fájl: Még semmi" Margin="10" FontWeight="Bold"/>
        <DataGrid x:Name="DataPreview" Grid.Row="1" Margin="10" IsReadOnly="False" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Oszlop1" Binding="{Binding [0]}" Width="*"/>
                <DataGridTextColumn Header="Oszlop2" Binding="{Binding [1]}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="LoadButton" Content="Betöltés" Click="LoadButton_Click" Margin="0,0,10,0" Padding="10" Background="LightBlue"/>
            <Button x:Name="ExportButton" Content="Kiírás" Click="ExportButton_Click" Padding="10" Background="DodgerBlue"/>
        </StackPanel>
        <TextBlock x:Name="StatusLabel" Grid.Row="2" Text="" Margin="10,0,0,10" Foreground="DarkGreen" VerticalAlignment="Center"/>
    </Grid>
</Window>